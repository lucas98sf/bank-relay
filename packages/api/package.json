{
  "name": "bank-relay-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "",
  "scripts": {
    "db": "docker-compose up mongo1 > /dev/null 2>&1",
    "watch": "tsx watch ./src/index.ts",
    "dev": "concurrently --kill-others --names db,api 'pnpm watch' 'pnpm db'",
    "build": "tsup src/index.ts --out-dir dist --format esm --target esnext --splitting",
    "start": "node ./dist/index.js",
    "predev": "pnpm prisma:generate && pnpm schema",
    "prisma:generate": "prisma generate --schema=./src/prisma/schema.prisma",
    "schema": "tsx ./scripts/generate-schema.ts",
    "relay": "relay-compiler",
    "test:docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down",
    "test": "npm run test:docker:up && vitest run; npm run test:docker:down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-errors": "^4.2.0",
    "@pothos/plugin-prisma": "^4.2.1",
    "@pothos/plugin-relay": "^4.3.0",
    "@pothos/plugin-validation": "^3.10.2",
    "@pothos/plugin-zod": "^4.1.0",
    "@prisma/client": "^5.21.1",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.1",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "graphql-http": "^1.22.1",
    "graphql-scalars": "^1.23.0",
    "graphql-yoga": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "prisma": "^5.21.1",
    "supertest": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.15.0",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.7.6",
    "@types/relay-runtime": "18.0.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "2.1.3",
    "relay-compiler": "18.1.0",
    "relay-runtime": "18.1.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "vitest": "^2.1.3"
  }
}
